<!DOCTYPE html>
<html lang="en">
<head>
 <%- include('../partials/head') %>
 <title>Homepage</title>
</head>
<body>
    <%- include('../partials/navbar') %>
  
    <div class="container mt-4 ">
        <h1><%= blog.title %></h1>
        <div class="row">
        <img src="<%= blog.coverImageURL %>" alt="img" width="800px" class="col-12">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    </div>
    <div class="container mt-4 text-right">
        <img src="<%= blog.createdBy.profile %>" width="50px">
        -<%= blog.createdBy.name %>
    </div>
    <div class="container mt-3 mb-5">
        <h1>Comments (<%= comments.length %>)</h1>
       <% if (locals.user) { %>
        <form action="/blog/comments/<%= blog._id %>" method="post">
            <input type="text" name="content" class="form-control" placeholder="Enter your comment">
            <br>
          <button type="submit" class="btn btn-primary btn-small">Add</button>
        </form>
       <% } %>
       <div class="container mt-4">
        <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profile %>" width="40px">
           <%= comment.createdBy.name %>:-  <pre>  <%= comment.content %></pre>
        <% }) %>
       </div>
    </div>
    <%- include('../partials/script') %>
</body>
</html>